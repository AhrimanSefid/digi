<BottomNavigation@GridLayout>:
    cols: 5
    canvas.after:
        Rectangle:
            group: 'a'
            pos: self.pos
            size: self.size
            source: 'img/App/nav5.jpg'
    ToggleButton: 
        group: "x"
        on_press: 
            app.root.current='account'
            root.nav_bot_source= 'img/App/nav1.jpg'
        on_release:
            app.root.mgr9.mgr1.canvas.after.get_group('a')[0].source='img/App/nav1.jpg'
    ToggleButton: 
        group: "x"
        on_press: 
            app.root.current='off'
            root.nav_bot_source= 'img/App/nav2.jpg'
        on_release:
            app.root.mgr6.mgr1.canvas.after.get_group('a')[0].source='img/App/nav2.jpg'
    ToggleButton: 
        group: "x"
        on_press: 
            app.root.current='order' 
            root.nav_bot_source= 'img/App/nav3.jpg'
        on_release:
            app.root.mgr7.mgr1.canvas.after.get_group('a')[0].source='img/App/nav3.jpg'
    ToggleButton: 
        group: "x"
        on_press: 
            app.root.current='grouping'
            root.nav_bot_source= 'img/App/nav4.jpg'
        on_release:
            app.root.mgr8.mgr1.canvas.after.get_group('a')[0].source='img/App/nav4.jpg'

    ToggleButton: 
        group: "x"
        on_press: 
            app.root.current='main'
            root.nav_bot_source= 'img/App/nav5.jpg'
        on_release:
            app.root.mgr1.mgr4.canvas.after.get_group('a')[0].source='img/App/nav5.jpg'

