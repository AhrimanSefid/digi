#:import NoTransition kivy.uix.screenmanager.NoTransition
<MainScreen>:
    source: 'img/Products/2465152.jpg' 
    transition: NoTransition()
    # Can be used to return to the previous page
    active_page: 'main'

    mgr1: _main
    mgr2: _search
    mgr5: _product
    mgr6: _off
    mgr7: _order
    mgr8: _grouping
    mgr9: _account

	Main:
        id: _main
	Search:
        id: _search
    Product:
        id: _product
    Off:
        id: _off
    Order:
        id: _order
    Grouping:
        id: _grouping
    Account:
        id: _account

<Main@Screen>:
    name: "main"
    mgr3: _scroll_main
    mgr4: _bot_nav
    mgr5:_search_bar
    #mgr5: _spinner
    FloatLayout:
        orientation: 'vertical'
        ScrollMain:
            id: _scroll_main
            pos_hint: {'top': 0.9496062978108724 }
        SearchBar:
            id: _search_bar
            pos_hint: {'top': 1}
            #size_hint:(1, 1/13)
            size_hint_y: None
            height: mm(8)
        BottomNavigation:
            id: _bot_nav
            size_hint_y: None
            height: mm(9)#dp(47)
    #MDSpinner:
    #    id: _spinner
    #    color: [1, 0, 0, 0]
    #    determinate: True
    #    active: False
    #    size_hint: None, None
    #    size: dp(46), dp(46)
    #    pos_hint: {'center_x': .5, 'center_y': .5}

<PopupBox>:
    pop_up_text: _pop_up_text
    size_hint: .55, .15
    auto_dismiss: True
    title: ""
    separator_color: 1, 0, 0, 0.5
    BoxLayout:
        orientation: "vertical"
        Label:
            id: _pop_up_text
            text: '' 
            #font_name: "XB Niloofar.ttf"

